    "css-loader": "^5.2.6",
    "html-webpack-plugin": "^5.3.2",
    "nodemon": "^2.0.9",
    "rimraf": "^3.0.2",
    "sass": "^1.35.2",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.0.0",
    "webpack": "^5.41.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-manifest-plugin": "^3.1.1",
    "workbox-webpack-plugin": "^6.1.5"
  }
